<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.secrola.weatherbuddy2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserScreen"
            android:label="@string/title_activity_user_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterScreen"
            android:label="@string/title_activity_register_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".test_activity"
            android:label="@string/title_activity_test_activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
